<h1>Create a Blog Post</h1>

  <%= form_for @mypost,
    url: create_path do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :body %>
    <%= f.text_area :body %>

    <%= f.submit %>
  <% end %>

